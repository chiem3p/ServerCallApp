<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Hello</title>
</head>

<body>
  <h1>Hello</h1>
  <video id='sun' width="300" controls></video>
</body>
<script>
  navigator.mediaDevices.getUserMedia({audio: false, video:true})
.then(function(stream) {
  var video = document.getElementById('sun');
  video.srcObject = stream;
  video.onloadedmetadata = function(e) {
    video.play();
  };
})
.catch(function(err) { console.log(err.name + ": " + err.message); });
</script>

</html>